<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
     "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
     "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.spacetimeinsight.db.grid.model">

	<class name="WeatherStation" table="STI_WEATHER_STATION">
		<id name="id" type="long">
			<generator class="native" />
		</id>
		<property name="name" type="string" column="NAME" />
		<property name="coordinates" type="string" column="COORDINATES" />
		<property name="stationId" type="string" column="STATION_ID" />
		<property name="createdDate" type="timestamp"
			column="CREATED_DATE" />
		<property name="modifiedDate" type="timestamp"
			column="MODIFIED_DATE" />
		<property name="createdBy" type="string" column="CREATED_BY" />
		<property name="modifiedBy" type="string" column="MODIFIED_BY" />
	</class>

</hibernate-mapping>