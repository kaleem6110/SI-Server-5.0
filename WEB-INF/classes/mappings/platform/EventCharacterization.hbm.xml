<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
     "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
     "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping
	package="com.spacetimeinsight.db.platform.model">

	<class name="EventCharacterization" table="STI_P_EVENT_CHARACTERIZATION">
		<id name="id" type="long">
			<generator class="native" />
		</id>
		<property name="domainId" type="long" column="DOMAIN_ID"/>		 
		<property name="eventTypeId" type="long" column="EVENT_TYPE_ID"/>
		<property name="characterizationName" type="string" column="CHARACTERIZATION_NAME" length="100" />		 
	</class>

</hibernate-mapping>